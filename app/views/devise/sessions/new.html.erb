<h2 class="text-center pt-5">Log in</h2>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <%= image_tag("https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp", class: "img-fluid", alt: "Sample image") %>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-outline mb-4">
            <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter a valid email address", autofocus: true, autocomplete: "email" %>
            <%= f.label :email, "Email address", class: "form-label" %>
          </div>
          <div class="form-outline mb-3">
            <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter password", autocomplete: "current-password" %>
            <%= f.label :password, "Password", class: "form-label" %>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
