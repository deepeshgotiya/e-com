<div class="container mt-4">
  <div class="row">
    <% if products.present? %>
      <% products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card" style="width: 18rem;">
            <% if product.image.attached? %>
              <%= image_tag product.image, class: 'card-img-top', alt: product.name %>
            <% else %>
              <img src="https://via.placeholder.com/150" class="card-img-top" alt="Default image">
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= product.name %>
              </h5>
              <p class="card-text"><%= product.description %></p>
              <div class="d-flex flex-column">
                <p class="card-text">
                 <span class="fw-bold"> Currently Available: </span> <%= product.current_stock %>
                </p>
                <p class="card-text">
                 <span class="fw-bold"> Price: </span> <%= product.price %>
                </p>
                <p class="card-text">
                   <span class="fw-bold"> Discount: </span><%= product.discount %>%
                </p>
                <%= button_to "Delete", admin_product_category_product_path(product), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this product?' } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
